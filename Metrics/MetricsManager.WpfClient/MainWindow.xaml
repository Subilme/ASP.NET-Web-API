<Window x:Class="MetricsManager.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetricsManager.WpfClient"
        mc:Ignorable="d"
        Title="Metrics" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Height="434" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="699*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <local:CpuChart HorizontalAlignment="Left" Margin="15,15,0,0" VerticalAlignment="Top" Height="250" Width="370"/>
        <local:HddChart HorizontalAlignment="Left" Margin="410,17,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="250" Width="370"/>

    </Grid>
</Window>
